public class array_op {
	public static void main(String[] args) {
		int arr[]= {10,20,5,70};
		int max=arr[0];
		int min=arr[0];
		int sum=0;
		for(int num:arr) {
			if(num>max) {
				max=num;
			}
			if(num<min) {
				min=num;
			}
			sum += num;
		}
        System.out.println("maximum:"+max);
        System.out.println("minimum:"+min);
        System.out.println("sum:"+sum);
	}
}
...........
maximum:70
minimum:5
sum:105
